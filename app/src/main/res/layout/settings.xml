<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21618C">

    <TextView
        android:id="@+id/settings_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:text="@string/settings_str"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/time_limit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="@string/time_limit_label_str"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/number_contacts_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_limit_label"
        android:layout_alignLeft="@+id/time_limit_label"
        android:layout_marginTop="50dp"
        android:text="@string/numb_contacts_label_str"
        android:textColor="#fff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/time_limit_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time_limit_label"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/time_limit_str"
        android:textColor="#fff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/number_contacts_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_limit_edittext"
        android:layout_alignRight="@+id/time_limit_edittext"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="@string/number_contacts_str"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="170dp"
        android:layout_marginBottom="100dp"
        android:text="@string/save_str"
        android:textAlignment="center"
        android:textSize="30sp" />


</RelativeLayout>